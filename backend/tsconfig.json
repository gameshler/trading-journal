{
  "compilerOptions": {
    "target": "ES2020",

    "module": "CommonJS",
    "rootDir": "./src",

    "outDir": "./dist",

    "noEmitOnError": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true
  },
  "include": ["src", "index.d.ts"],
  "exclude": ["node_modules"]
}
